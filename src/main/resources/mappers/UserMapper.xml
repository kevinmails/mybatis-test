<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

    <resultMap id="userResult" type="com.kevin.dao.User">
        <result column="id" property="id" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectUser" resultType="com.kevin.dao.User" resultMap="userResult" >
    select id, user_name, order_no, create_time from t_user where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.kevin.dao.User">
        insert into t_user(id, user_name, order_no) values( #{id}, #{userName}, #{orderNo})
    </insert>

</mapper>